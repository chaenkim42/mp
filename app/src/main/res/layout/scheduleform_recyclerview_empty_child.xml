<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="13dp"
    android:paddingLeft="13dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/recyclerviewEmptychild_vertical_bar"
        android:layout_width="3dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/vertical_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/WHITE" />

    <TextView
        android:id="@+id/recyclerviewEmptychild_circle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_plus_backfilled"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/recyclerviewEmptychild_vertical_bar"
        app:layout_constraintStart_toStartOf="@+id/recyclerviewEmptychild_vertical_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/WHITE" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recyclerviewEmptychild_text_constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="5dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerviewEmptychild_circle"
        app:layout_constraintStart_toEndOf="@+id/recyclerviewEmptychild_circle"
        app:layout_constraintTop_toTopOf="@+id/recyclerviewEmptychild_circle">

        <TextView
            android:id="@+id/recyclerviewEmptychild_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소 추가하기!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
