<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="13dp"
    android:paddingStart="13dp"
    android:paddingRight="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyclerviewheader_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#045CB1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerviewheader_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="9.1/일"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerviewheader_title"
        app:layout_constraintStart_toEndOf="@+id/recyclerviewheader_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recyclerviewheader_toggleBtn_constraintLayout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerviewheader_date"
        app:layout_constraintStart_toEndOf="@+id/recyclerviewheader_date"
        app:layout_constraintTop_toTopOf="@+id/recyclerviewheader_date">

        <ImageView
            android:id="@+id/recyclerviewheader_btn_expand_toggle"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/down_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/recyclerviewheader_budgetBtn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/WHITE"
        android:text="@string/budget"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerviewheader_editBtn"
        app:layout_constraintEnd_toStartOf="@+id/recyclerviewheader_editBtn"
        app:layout_constraintTop_toTopOf="@+id/recyclerviewheader_editBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/recyclerviewheader_editBtn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/WHITE"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recyclerviewheader_saveBtn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/WHITE"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
