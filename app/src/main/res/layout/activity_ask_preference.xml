<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/askPreference_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskPreference">

    <ImageView
        android:id="@+id/askPreference_taengIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tangerine" />

    <ImageView
        android:id="@+id/askPreference_talkbox"
        android:layout_width="223dp"
        android:layout_height="142dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/askPreference_taengIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/askPreference_taengIcon"
        app:layout_constraintTop_toTopOf="@+id/askPreference_taengIcon"
        app:layout_constraintVertical_bias="0.39"
        app:srcCompat="@drawable/check" />

    <ToggleButton
        android:id="@+id/askPreference_toggleBtn_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toStartOf="@+id/askPreference_taengIcon"
        app:layout_constraintTop_toBottomOf="@+id/askPreference_talkbox" />

    <Button
        android:id="@+id/askPreference_nextPageBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:text="선택완료"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>