<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:paddingStart="13dp"
android:paddingLeft="13dp"
android:paddingEnd="10dp"
android:paddingRight="10dp">


    <ImageButton
        android:id="@+id/edit_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/box_selected"
        app:layout_constraintEnd_toStartOf="@+id/recyclerviewchild_location_title"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
    android:id="@+id/recyclerviewchild_vertical_bar"
    android:layout_width="3dp"
    android:layout_height="64dp"
    android:layout_marginStart="32dp"
    android:background="@drawable/vertical_line"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@color/WHITE" />

<TextView
    android:id="@+id/recyclerviewchild_circle"
    android:layout_width="23dp"
    android:layout_height="23dp"
    android:background="@drawable/circle_yellow"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="@+id/recyclerviewchild_vertical_bar"
    app:layout_constraintEnd_toEndOf="@+id/recyclerviewchild_vertical_bar"
    app:layout_constraintStart_toStartOf="@+id/recyclerviewchild_vertical_bar"
    app:layout_constraintTop_toTopOf="@+id/recyclerviewchild_vertical_bar"
    app:layout_constraintVertical_bias="0.25"
    app:srcCompat="@color/WHITE" />

<TextView
    android:id="@+id/recyclerviewchild_location_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="TextView"
    app:layout_constraintBottom_toBottomOf="@+id/recyclerviewchild_circle"
    app:layout_constraintStart_toEndOf="@+id/recyclerviewchild_circle"
    app:layout_constraintTop_toTopOf="@+id/recyclerviewchild_circle" />
</androidx.constraintlayout.widget.ConstraintLayout>
