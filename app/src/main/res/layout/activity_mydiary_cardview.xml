<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="140dp"
    android:background="@drawable/diarycard">

    <TextView
        android:id="@+id/mydiary_cardview_timetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:text="XX:XX"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mydiary_cardview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="다이어리제목"
        app:layout_constraintStart_toStartOf="@+id/mydiary_cardview_timetxt"
        app:layout_constraintTop_toBottomOf="@+id/mydiary_cardview_timetxt" />

    <TextView
        android:id="@+id/mydiary_cardview_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mydiary_cardview_title"
        app:layout_constraintTop_toBottomOf="@+id/mydiary_cardview_title" />

    <ImageView
        android:id="@+id/mydiary_cardview_photobox"
        android:layout_width="128dp"
        android:layout_height="92dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photobox_empty" />
</androidx.constraintlayout.widget.ConstraintLayout>